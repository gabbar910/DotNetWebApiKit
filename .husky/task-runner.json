{
   "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
   "tasks": [
      {
         "name": "format-check",
         "group": "pre-commit",
         "command": "dotnet",
         "args": [ "format", "DotNetWebAPIKit.sln", "--verify-no-changes", "--severity", "error" ],
         "include": [ "**/*.cs" ]
      }
   ]
}
