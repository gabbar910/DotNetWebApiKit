#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

BRANCH_NAME=$(git symbolic-ref --short HEAD)
if [ "$BRANCH_NAME" = "main" ]; then
  echo "â›”ï¸ Direct pushes to 'main' are not allowed. Use a pull request."
  exit 1
fi

if [ "$BRANCH_NAME" = "dev" ]; then
  echo "â›”ï¸ Direct pushes to 'dev' are not allowed. Use a pull request."
  exit 1
fi

